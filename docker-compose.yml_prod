version: '3.2'
services:
  user-app:
   image: user-app
   build: userservice/
   restart: always
   network_mode: host
   ports:
     - 7070:7070
   expose:
     - 7070
   depends_on:
     - book-mysql
  book-app:
   image: book-app
   build: favouriteservice/
   restart: always
   network_mode: host
   ports:
     - 9090:9090
   expose:
     - 9090
   depends_on:
     - book-mysql

  book-mysql:
   image: mysql:5.5
   network_mode: host
   ports:
     - "3306:3306"
   environment:
     MYSQL_ROOT_PASSWORD: root
     MYSQL_DATABASE: bookdb
  angular:
    image: angular-app
    build: MyBooksUI/
    network_mode: host
    container_name: angular-docker
    ports:
      - 4200:4200
    expose:
     - 4200
